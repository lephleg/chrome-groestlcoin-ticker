{
    "manifest_version": 2,

    "name": "Chrome Groestlcoin Ticker",
    "description": "This extension shows latest price ticker from the top GRS exchanges.",
    "version": "0.0.3",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "persistent": true,
        "page": "background.html"
    },

    "options_page": "options.html",

    "permissions": [
        "https://bittrex.com/",
        "https://cryptopia.co.nz/"
    ]
}
